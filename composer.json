{
  "name": "evoweb/store-finder",
  "type": "typo3-cms-plugin",
  "description": "Store Finder",
  "homepage": "http://www.evoweb.de/",
  "keywords": [
    "store finder",
    "store locator",
    "poi",
    "shop list",
    "google map"
  ],
  "license": [
    "GPL-2.0+"
  ],
  "authors": [
    {
      "name": "Sebastian Fischer",
      "email": "typo3@evoweb.de",
      "homepage": "http://www.evoweb.de/"
    }
  ],
  "support": {
    "issues": "http://forge.typo3.org/projects/extension-store_finder/issues",
    "source": "https://git.typo3.org/TYPO3CMS/Extensions/store_finder.git"
  },

  "require": {
    "php": ">=5.3.7",
    "typo3/cms": "^7.6"
  },

  "require-dev": {
    "namelesscoder/typo3-repository-client": "^1.2.0",
    "mikey179/vfsStream": "~1.6.0",
    "phpunit/phpunit": "~4.8.0"
  },

  "replace": {
    "store_finder": "self.version",
    "typo3-ter/store-finder": "self.version"
  },

  "autoload": {
    "psr-4": {
      "Evoweb\\StoreFinder\\": "Classes/"
    }
  },

  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },

  "scripts": {
    "extension-release": [
      "rm -rf Tests/"
    ]
  },

  "extra": {
    "branch-alias": {
      "dev-master": "develop"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web",
      "Package": {
        "partOfMinimalUsableSystem": true
      }
    }
  }
}